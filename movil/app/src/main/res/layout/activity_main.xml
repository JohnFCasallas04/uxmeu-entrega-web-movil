<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/fondo"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="@string/fondo_login_string_name"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/fondo" />

  <LinearLayout
    android:id="@+id/marcaLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2"
    app:layout_constraintBottom_toBottomOf="@+id/fondo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/logoApp"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:adjustViewBounds="false"
      android:contentDescription="@string/logoAppText"
      android:cropToPadding="false"
      android:scaleType="centerInside"
      app:srcCompat="@drawable/deadline" />

    <TextView
      android:id="@+id/appName"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_weight=".2"
      android:text="@string/app_name"
      android:textColor="@color/color_principal"
      android:textSize="40sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/inferior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/usuarioLoginInput"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:boxBackgroundMode="outline"
      app:boxStrokeColor="@color/color_acentuar"
      app:boxStrokeWidth="2dp"
      app:hintTextColor="@color/color_acentuar">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/usuarioLoginText"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Usuario"
        android:textColor="@color/color_placeholder" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/passwordLoginInput"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="32dp"
      app:boxBackgroundMode="outline"
      app:boxStrokeColor="@color/color_acentuar"
      app:boxStrokeWidth="2dp"
      app:hintTextColor="@color/color_acentuar">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordLoginText"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="ContraseÃ±a"
        android:password="true"
        android:textColor="@color/color_placeholder" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
      android:id="@+id/loginBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="32dp"
      android:backgroundTint="@color/color_principal"
      android:fontFamily="@font/adlam_display"
      android:text="@string/textoLoginBtn"
      android:textAllCaps="false"
      android:textColor="@color/color_fondo"
      app:cornerRadius="10dp" />

    <Button
      android:id="@+id/resetPassBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="48dp"
      android:layout_marginVertical="2dp"
      android:text="@string/textoResetPassBtn"
      android:textAllCaps="false"
      android:textColor="@color/color_cuerpo"
      android:visibility="visible" />

    <Button
      android:id="@+id/signUpBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="48dp"
      android:layout_marginVertical="2dp"
      android:text="@string/textoSignUpBtn"
      android:textAllCaps="false"
      android:textColor="@color/color_acentuar"
      android:visibility="visible" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout >
